# TennisMeet Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (PostgreSQL via Prisma)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/tennismeet?schema=public"

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Authentication Providers
# Google OAuth (for future implementation)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Maps & Location Services (for future implementation)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Email Service (for future implementation)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# File Upload (for future implementation)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Analytics (for future implementation)
NEXT_PUBLIC_GA_MEASUREMENT_ID=
